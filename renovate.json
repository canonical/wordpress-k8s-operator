{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "extends": [
    "config:base",
    "group:all"
  ],
  "packageRules": [
    {
      "enabled": true,
      "matchDatasources": [
        "docker"
      ],
      "pinDigests": true
    },
    {
      "enabled": false,
      "matchFiles": [
        "rockcraft.yaml"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ]
    }
  ],
  "regexManagers": [
    {
      "datasourceTemplate": "docker",
      "description": "Update base image references",
      "fileMatch": [
        "(^|/)rockcraft.yaml$"
      ],
      "matchStrings": [
        "# renovate: build-base:\\s+(?<depName>[^:]*):(?<currentValue>[^\\s@]*)(@(?<currentDigest>sha256:[0-9a-f]*))?",
        "# renovate: base:\\s+(?<depName>[^:]*):(?<currentValue>[^\\s@]*)(@(?<currentDigest>sha256:[0-9a-f]*))?"
      ],
      "matchStringsStrategy": "any",
      "versioningTemplate": "ubuntu"
    }
  ]
}
